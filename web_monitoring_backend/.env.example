# ============================================
# Django Core Settings
# ============================================
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
DJANGO_SETTINGS_MODULE=config.settings

# ============================================
# Database Configuration
# ============================================
# Development: SQLite
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# Production: PostgreSQL
DB_ENGINE=django.db.backends.postgresql
DB_NAME=selferase_monitoring
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# ============================================
# Email Configuration (Gmail SMTP)
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-16-chars
DEFAULT_FROM_EMAIL=noreply@selferase.io
SERVER_EMAIL=noreply@selferase.io

# ============================================
# Stripe Payment Configuration
# ============================================
STRIPE_PUBLIC_KEY=pk_test_your_public_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_test_your_webhook_secret_here

# ============================================
# Twilio SMS Configuration (Optional)
# ============================================
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# Redis and Celery Configuration
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_BROKER_CONNECTION_RETRY_ON_STARTUP=True
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=True

# ============================================
# CORS Configuration
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000
CORS_ALLOW_CREDENTIALS=True


# ============================================
# Heroku Deployment Configuration
# ============================================
HEROKU_POSTGRESQL_URL=
HEROKU_REDIS_URL=redis://localhost:6379/0

# ============================================
# Security Settings
# ============================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
SENTRY_DSN=

# ============================================
# Application Specific Settings
# ============================================
SITE_NAME=SelfErase
SITE_DOMAIN=localhost:8000
SITE_URL=http://localhost:8000
API_URL=http://localhost:8000/api

# ============================================
# Monitoring Configuration
# ============================================
CHECK_INTERVAL_CHOICES=daily,weekly,monthly
DEFAULT_CHECK_INTERVAL=daily
KEYWORD_DETECTION_TIMEOUT=30

# ============================================
# Subscription and Payment Settings
# ============================================
STANDARD_PLAN_COST=1.00
DISCOVERY_PLAN_COST=5.00
SUBSCRIPTION_DURATION_DAYS=30
EXPIRATION_WARNING_DAYS=7

# ============================================
# Feature Flags
# ============================================
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SMS_NOTIFICATIONS=False
ENABLE_PAYMENT_PROCESSING=True
ENABLE_ADMIN_PANEL=True
ENABLE_API_THROTTLING=True
ENABLE_RATE_LIMITING=True

# ============================================
# API Configuration
# ============================================
API_THROTTLE_RATE=100/hour
API_PAGINATION_SIZE=20
API_VERSION=v1

# ============================================
# Cache Configuration
# ============================================
CACHE_TIMEOUT=300
CACHE_KEY_PREFIX=selferase_

# ============================================
# Timezone Configuration
# ============================================
TIME_ZONE=UTC
USE_TZ=True

# ============================================
# Internationalization
# ============================================
LANGUAGE_CODE=en-us
USE_I18N=True
USE_L10N=True

# ============================================
# BeautifulSoup Web Scraping Configuration
# ============================================
SCRAPING_TIMEOUT=30
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
SCRAPING_MAX_RETRIES=3

# ============================================
# Test Configuration
# ============================================
TEST_RUNNER=django.test.runner.DiscoverRunner
TEST_DATABASE_NAME=test_selferase_monitoring
